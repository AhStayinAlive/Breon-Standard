{% doc %}
  @prompt
    Create a simple "Join the Team + Contact Us" section in my Broen dark style: centered "Join the Team" heading with an editable blurb and editable email shown as a mailto pill; below it a compact "Contact Us" card using Shopify's {% form 'contact' %} with fields for name, email (required), optional phone (toggle), and message, plus success/error messagesâ€”mobile-first, max-width ~720px, 20px gaps, rounded inputs, glassy surface, large primary submit button, accessible labels and focus rings, no JS. Full theme editor customization for all colors, typography, spacing, and layout.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  /* Apply background to entire page */
  body,
  .shopify-section-group-header-group,
  .shopify-section-group-footer-group,
  main,
  #MainContent,
  .main-content,
  .page-container,
  .container,
  .content-wrapper {
    background: {{ block.settings.section_background }} !important;
  }

  .ai-join-contact-{{ ai_gen_id }} {
    background: transparent;
    width: 100%;
    position: relative;
    color: {{ block.settings.text_color }};
    padding: {{ block.settings.section_padding }}px 20px;
  }

  .ai-join-contact__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    width: 100%;
  }

  .ai-join-section-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.section_gap }}px;
  }

  .ai-join-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size_mobile }}px;
    font-weight: {{ block.settings.heading_weight }};
    margin: 0 0 {{ block.settings.heading_margin_bottom }}px 0;
    color: {{ block.settings.heading_color }};
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
    letter-spacing: {{ block.settings.heading_letter_spacing }};
    line-height: {{ block.settings.heading_line_height }};
  }

  .ai-join-blurb-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.blurb_margin_bottom }}px 0;
    line-height: {{ block.settings.text_line_height }};
    color: {{ block.settings.text_color }};
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
    font-size: {{ block.settings.text_size }}px;
  }

  .ai-email-pill-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background-color: {{ block.settings.email_pill_bg }};
    color: {{ block.settings.email_pill_text }};
    padding: {{ block.settings.button_padding_y }}px {{ block.settings.button_padding_x }}px;
    border-radius: {{ block.settings.button_border_radius }}px;
    text-decoration: none;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.email_pill_border }};
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
    font-weight: {{ block.settings.button_font_weight }};
    backdrop-filter: blur({{ block.settings.blur_amount }}px);
    -webkit-backdrop-filter: blur({{ block.settings.blur_amount }}px);
    box-shadow: {{ block.settings.button_shadow }};
    font-size: {{ block.settings.button_font_size }}px;
    min-height: {{ block.settings.button_min_height }}px;
  }

  .ai-email-pill-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.email_pill_hover_bg }};
    color: {{ block.settings.email_pill_hover_text }};
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: {{ block.settings.button_hover_shadow }};
    border-color: {{ block.settings.email_pill_hover_border }};
  }

  .ai-email-pill-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.focus_color }};
    outline-offset: 2px;
  }

  .ai-contact-card-{{ ai_gen_id }} {
    background: {{ block.settings.card_bg }};
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    backdrop-filter: blur({{ block.settings.blur_amount }}px);
    -webkit-backdrop-filter: blur({{ block.settings.blur_amount }}px);
    box-shadow: {{ block.settings.card_shadow }};
    position: relative;
    overflow: hidden;
  }

  .ai-contact-card-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, {{ block.settings.card_border | color_modify: 'alpha', 0.6 }}, transparent);
  }

  .ai-contact-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.contact_heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    margin: 0 0 {{ block.settings.contact_heading_margin }}px 0;
    text-align: center;
    color: {{ block.settings.heading_color }};
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
    letter-spacing: {{ block.settings.heading_letter_spacing }};
  }

  .ai-contact-form-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.form_gap }}px;
  }

  .ai-form-group-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.label_gap }}px;
  }

  .ai-form-label-{{ ai_gen_id }} {
    font-weight: {{ block.settings.label_font_weight }};
    color: {{ block.settings.label_color }};
    font-size: {{ block.settings.label_font_size }}px;
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  }

  .ai-form-input-{{ ai_gen_id }},
  .ai-form-textarea-{{ ai_gen_id }} {
    padding: {{ block.settings.input_padding_y }}px {{ block.settings.input_padding_x }}px;
    background: {{ block.settings.input_bg }};
    border: {{ block.settings.input_border_width }}px solid {{ block.settings.input_border }};
    border-radius: {{ block.settings.input_border_radius }}px;
    color: {{ block.settings.input_text_color }};
    font-size: {{ block.settings.input_font_size }}px;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
    backdrop-filter: blur({{ block.settings.blur_amount }}px);
    -webkit-backdrop-filter: blur({{ block.settings.blur_amount }}px);
    outline: none;
    box-shadow: {{ block.settings.input_shadow }};
  }

  .ai-form-input-{{ ai_gen_id }}::placeholder,
  .ai-form-textarea-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.placeholder_color }};
  }

  .ai-form-input-{{ ai_gen_id }}:focus,
  .ai-form-textarea-{{ ai_gen_id }}:focus {
    border-color: {{ block.settings.input_focus_border }};
    background: {{ block.settings.input_focus_bg }};
    box-shadow: 0 0 0 3px {{ block.settings.input_focus_ring }};
  }

  .ai-form-textarea-{{ ai_gen_id }} {
    min-height: {{ block.settings.textarea_min_height }}px;
    resize: vertical;
    font-family: inherit;
  }

  .ai-submit-button-{{ ai_gen_id }} {
    padding: {{ block.settings.button_padding_y }}px {{ block.settings.button_padding_x }}px;
    background-color: {{ block.settings.submit_button_bg }};
    color: {{ block.settings.submit_button_text }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.submit_button_border }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
    letter-spacing: {{ block.settings.heading_letter_spacing }};
    backdrop-filter: blur({{ block.settings.blur_amount }}px);
    -webkit-backdrop-filter: blur({{ block.settings.blur_amount }}px);
    box-shadow: {{ block.settings.button_shadow }};
    min-height: {{ block.settings.button_min_height }}px;
  }

  .ai-submit-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.submit_button_hover_bg }};
    color: {{ block.settings.submit_button_hover_text }};
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: {{ block.settings.button_hover_shadow }};
    border-color: {{ block.settings.submit_button_hover_border }};
  }

  .ai-submit-button-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.focus_color }};
    outline-offset: 2px;
  }

  .ai-submit-button-{{ ai_gen_id }}:active {
    transform: translateY(-1px);
  }

  .ai-form-message-{{ ai_gen_id }} {
    padding: {{ block.settings.message_padding }}px;
    border-radius: {{ block.settings.input_border_radius }}px;
    margin-top: 16px;
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
    font-weight: 500;
    backdrop-filter: blur({{ block.settings.blur_amount }}px);
    -webkit-backdrop-filter: blur({{ block.settings.blur_amount }}px);
    font-size: {{ block.settings.message_font_size }}px;
  }

  .ai-form-success-{{ ai_gen_id }} {
    background: {{ block.settings.success_bg }};
    border: 1px solid {{ block.settings.success_border }};
    color: {{ block.settings.success_text }};
  }

  .ai-form-error-{{ ai_gen_id }} {
    background: {{ block.settings.error_bg }};
    border: 1px solid {{ block.settings.error_border }};
    color: {{ block.settings.error_text }};
  }

  @media (min-width: 768px) {
    .ai-join-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_desktop }}px;
    }
  }

  @media (max-width: 768px) {
    .ai-join-contact-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.7 }}px 16px;
    }

    .ai-contact-card-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.75 }}px;
    }

    .ai-form-input-{{ ai_gen_id }},
    .ai-form-textarea-{{ ai_gen_id }} {
      padding: {{ block.settings.input_padding_y | times: 0.85 }}px {{ block.settings.input_padding_x | times: 0.85 }}px;
    }

    .ai-submit-button-{{ ai_gen_id }},
    .ai-email-pill-{{ ai_gen_id }} {
      padding: {{ block.settings.button_padding_y | times: 0.85 }}px {{ block.settings.button_padding_x | times: 0.85 }}px;
    }
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .ai-email-pill-{{ ai_gen_id }},
    .ai-form-input-{{ ai_gen_id }},
    .ai-form-textarea-{{ ai_gen_id }},
    .ai-submit-button-{{ ai_gen_id }} {
      transition: none;
    }

    .ai-email-pill-{{ ai_gen_id }}:hover,
    .ai-submit-button-{{ ai_gen_id }}:hover {
      transform: none;
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .ai-contact-card-{{ ai_gen_id }} {
      border-width: 2px;
    }

    .ai-form-input-{{ ai_gen_id }},
    .ai-form-textarea-{{ ai_gen_id }},
    .ai-email-pill-{{ ai_gen_id }},
    .ai-submit-button-{{ ai_gen_id }} {
      border-width: 2px;
    }
  }
{% endstyle %}

<div class="ai-join-contact-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-join-contact__container-{{ ai_gen_id }}">
    <div class="ai-join-section-{{ ai_gen_id }}">
      {% if block.settings.join_heading != blank %}
        <h2 class="ai-join-heading-{{ ai_gen_id }}">{{ block.settings.join_heading }}</h2>
      {% endif %}
      
      {% if block.settings.join_blurb != blank %}
        <div class="ai-join-blurb-{{ ai_gen_id }}">{{ block.settings.join_blurb }}</div>
      {% endif %}
      
      {% if block.settings.join_email != blank %}
        <a href="mailto:{{ block.settings.join_email }}" class="ai-email-pill-{{ ai_gen_id }}">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
          </svg>
          {{ block.settings.join_email }}
        </a>
      {% endif %}
    </div>

    <div class="ai-contact-card-{{ ai_gen_id }}">
      {% if block.settings.contact_heading != blank %}
        <h3 class="ai-contact-heading-{{ ai_gen_id }}">{{ block.settings.contact_heading }}</h3>
      {% endif %}

      {% form 'contact' %}
        <div class="ai-contact-form-{{ ai_gen_id }}">
          <div class="ai-form-group-{{ ai_gen_id }}">
            <label for="contact-name-{{ ai_gen_id }}" class="ai-form-label-{{ ai_gen_id }}">{{ block.settings.name_label }}</label>
            <input
              type="text"
              id="contact-name-{{ ai_gen_id }}"
              name="contact[name]"
              class="ai-form-input-{{ ai_gen_id }}"
              value="{{ form.name }}"
              placeholder="{{ block.settings.name_placeholder }}"
              required
              aria-required="true"
            >
          </div>

          <div class="ai-form-group-{{ ai_gen_id }}">
            <label for="contact-email-{{ ai_gen_id }}" class="ai-form-label-{{ ai_gen_id }}">{{ block.settings.email_label }}</label>
            <input
              type="email"
              id="contact-email-{{ ai_gen_id }}"
              name="contact[email]"
              class="ai-form-input-{{ ai_gen_id }}"
              value="{{ form.email }}"
              placeholder="{{ block.settings.email_placeholder }}"
              required
              aria-required="true"
              autocomplete="email"
            >
          </div>

          {% if block.settings.show_phone %}
            <div class="ai-form-group-{{ ai_gen_id }}">
              <label for="contact-phone-{{ ai_gen_id }}" class="ai-form-label-{{ ai_gen_id }}">{{ block.settings.phone_label }}</label>
              <input
                type="tel"
                id="contact-phone-{{ ai_gen_id }}"
                name="contact[phone]"
                class="ai-form-input-{{ ai_gen_id }}"
                value="{{ form.phone }}"
                placeholder="{{ block.settings.phone_placeholder }}"
                autocomplete="tel"
              >
            </div>
          {% endif %}

          <div class="ai-form-group-{{ ai_gen_id }}">
            <label for="contact-message-{{ ai_gen_id }}" class="ai-form-label-{{ ai_gen_id }}">{{ block.settings.message_label }}</label>
            <textarea
              id="contact-message-{{ ai_gen_id }}"
              name="contact[body]"
              class="ai-form-textarea-{{ ai_gen_id }}"
              placeholder="{{ block.settings.message_placeholder }}"
              required
              aria-required="true">{{ form.body }}</textarea>
          </div>

          <button type="submit" class="ai-submit-button-{{ ai_gen_id }}">
            {{ block.settings.submit_label }}
          </button>
        </div>

        {% if form.posted_successfully? %}
          <div class="ai-form-message-{{ ai_gen_id }} ai-form-success-{{ ai_gen_id }}">
            {{ block.settings.success_message }}
          </div>
        {% endif %}

        {% if form.errors %}
          <div class="ai-form-message-{{ ai_gen_id }} ai-form-error-{{ ai_gen_id }}">
            {% for field in form.errors %}
              {{ field | capitalize }} {{ form.errors.messages[field] }}.
            {% endfor %}
          </div>
        {% endif %}
      {% endform %}
    </div>
  </div>
</div>

