{% comment %}
  OUR CLIENTS CAROUSEL - FIXED VERSION:
  - FIXED: Full width utilization (removed max-width constraint)
  - FIXED: Proper cards per view functionality
  - FIXED: Autoplay properly respects theme editor setting
  - Client testimonial cards with product showcase
  - Testimonial overlay with quote and CTA button on hover
  - Same arrow navigation and design consistency
  - Location, product name, door type, and client information
  - Interactive hover states with smooth transitions
  - Product metafield linking support
{% endcomment %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  /* Make the custom element behave like a block container */
  clients-carousel-{{ ai_gen_id }} { display:block; isolation:isolate; }

  .ai-clients-carousel-{{ ai_gen_id }} {
    background: {{ block.settings.background_color | default: '#000000' }};
    background: linear-gradient(45deg, {{ block.settings.background_color | default: '#000000' }} 0%, {{ block.settings.background_color | default: '#000000' | color_darken: 3 }} 50%, {{ block.settings.background_color | default: '#000000' }} 100%);
    padding-top: var(--pt);
    padding-bottom: var(--pb);
    overflow: visible;
    width: 100%;
    position: relative;
  }

  .ai-clients-carousel-{{ ai_gen_id }}::before {
    content: '';
    position: absolute; inset: 0;
    background: linear-gradient(
      45deg,
      {{ block.settings.background_color | default: '#000000' | color_modify: 'alpha', 0.95 }} 0%,
      {{ block.settings.background_color | default: '#000000' | color_darken: 8 | color_modify: 'alpha', 0.98 }} 50%,
      {{ block.settings.background_color | default: '#000000' | color_modify: 'alpha', 0.95 }} 100%
    );
    z-index: 1;
  }

  .ai-clients-carousel__container-{{ ai_gen_id }} {
    width: 100%;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 2;
  }

  .ai-clients-carousel__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color | default: '#ffffff' }};
    font-size: clamp({{ block.settings.heading_size | default: 48 | minus: 8 }}px, 5vw, {{ block.settings.heading_size | default: 48 }}px);
    font-weight: 700;
    text-align: center;
    margin: 0 0 {{ block.settings.heading_spacing | default: 80 }}px;
    letter-spacing: -0.02em;
    line-height: 1.05;
    position: relative;
  }

  .ai-clients-carousel__heading-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    bottom: -24px; left: 50%; transform: translateX(-50%);
    width: 60px; height: 1px;
    background: linear-gradient(90deg, transparent, {{ block.settings.heading_color | default: '#ffffff' | color_modify: 'alpha', 0.8 }}, transparent);
  }

  .ai-clients-carousel__wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: visible;
    margin: 0;
    padding: 32px 0 48px 0;
    z-index: 2;
  }

  .ai-clients-carousel__track-container-{{ ai_gen_id }} {
    position: relative;
    overflow: visible;
    margin: 0 80px;
    border-radius: 20px;
    z-index: 2;
  }

  .ai-clients-carousel__track-{{ ai_gen_id }} {
    display: flex;
    gap: 32px;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    will-change: transform;
    padding: 0 20px;
  }

  .ai-clients-carousel__card-{{ ai_gen_id }} {
    flex: 0 0 auto;
    width: calc((100% - ({{ block.settings.cards_per_view_desktop | default: 3 | minus: 1 }} * 32px)) / {{ block.settings.cards_per_view_desktop | default: 3 }});
    min-width: 280px;
    height: 480px;
    background: {{ block.settings.card_background | default: '#1a1a1a' | color_modify: 'alpha', 0.95 }};
    border: 1px solid {{ block.settings.card_background | default: '#1a1a1a' | color_lighten: 20 | color_modify: 'alpha', 0.08 }};
    border-radius: {{ block.settings.card_border_radius | default: 24 }}px;
    box-shadow: 0 8px 32px {{ block.settings.card_background | default: '#000000' | color_modify: 'alpha', 0.4 }};
    overflow: hidden;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1), box-shadow .3s, border-color .3s, background .3s;
    text-decoration: none; color: inherit; cursor: pointer;
    backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px);
    will-change: transform;
    position: relative;
    z-index: 1;
  }

  .ai-clients-carousel__card-{{ ai_gen_id }}:hover {
    transform: translateY(-16px) scale(1.02);
    border-color: {{ block.settings.card_background | default: '#1a1a1a' | color_lighten: 40 | color_modify: 'alpha', 0.2 }};
    box-shadow: 0 32px 64px {{ block.settings.card_background | default: '#000000' | color_modify: 'alpha', 0.6 }};
    background: {{ block.settings.card_background | default: '#1a1a1a' | color_lighten: 5 | color_modify: 'alpha', 0.98 }};
    z-index: 3;
  }

  .ai-clients-carousel__card-media-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 280px;
    background: linear-gradient(135deg, {{ block.settings.card_background | default: '#1a1a1a' | color_lighten: 10 }} 0%, {{ block.settings.card_background | default: '#1a1a1a' | color_darken: 5 }} 100%);
    overflow: hidden;
    display: flex; align-items: center; justify-content: center;
    padding: 32px;
  }

  .ai-clients-carousel__card-media-{{ ai_gen_id }} img,
  .ai-clients-carousel__card-media-{{ ai_gen_id }} video {
    width: 100%; height: 100%; object-fit: cover;
    border-radius: 16px;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .ai-clients-carousel__card-{{ ai_gen_id }}:hover .ai-clients-carousel__card-media-{{ ai_gen_id }} img,
  .ai-clients-carousel__card-{{ ai_gen_id }}:hover .ai-clients-carousel__card-media-{{ ai_gen_id }} video {
    transform: scale(1.05);
  }

  .ai-clients-carousel__card-placeholder-{{ ai_gen_id }} {
    width: 100%; height: 100%;
    background: linear-gradient(135deg, {{ block.settings.card_background | default: '#1a1a1a' | color_lighten: 15 }} 0%, {{ block.settings.card_background | default: '#1a1a1a' | color_lighten: 5 }} 100%);
    border-radius: 16px;
    display: flex; align-items: center; justify-content: center;
    font-size: 14px; font-weight: 500;
    color: {{ block.settings.card_text_color | default: '#ffffff' | color_modify: 'alpha', 0.6 }};
    text-align: center;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1), background .3s, border-color .3s;
    border: 1px solid {{ block.settings.card_background | default: '#1a1a1a' | color_lighten: 20 | color_modify: 'alpha', 0.1 }};
  }

  .ai-clients-carousel__card-{{ ai_gen_id }}:hover .ai-clients-carousel__card-placeholder-{{ ai_gen_id }} {
    transform: scale(1.05);
    background: linear-gradient(135deg, {{ block.settings.card_background | default: '#1a1a1a' | color_lighten: 25 }} 0%, {{ block.settings.card_background | default: '#1a1a1a' | color_lighten: 10 }} 100%);
    border-color: {{ block.settings.card_background | default: '#1a1a1a' | color_lighten: 30 | color_modify: 'alpha', 0.2 }};
  }

  .ai-clients-carousel__card-placeholder-{{ ai_gen_id }} svg {
    width: 48px; height: 48px; opacity: 0.4;
    fill: {{ block.settings.card_text_color | default: '#ffffff' | color_modify: 'alpha', 0.5 }};
  }

  /* CLIENT INFO OVERLAY */
  .ai-clients-carousel__client-info-{{ ai_gen_id }} {
    position: absolute; left: 0; right: 0; bottom: 0;
    background: linear-gradient(180deg, {{ block.settings.client_info_overlay_bg | default: '#000000' | color_modify: 'alpha', 0 }} 0%, {{ block.settings.client_info_overlay_bg | default: '#000000' | color_modify: 'alpha', 0.7 }} 30%, {{ block.settings.client_info_overlay_bg | default: '#000000' | color_modify: 'alpha', 0.95 }} 100%);
    padding: 32px 28px 28px 28px;
    color: {{ block.settings.card_text_color | default: '#ffffff' }};
    backdrop-filter: blur(15px);
    transition: opacity .4s ease, transform .4s ease;
    display: flex; flex-direction: column; gap: 16px;
    min-height: 140px; justify-content: flex-end;
    z-index: 2;
  }

  .ai-clients-carousel__location-{{ ai_gen_id }} {
    font-size: 11px; font-weight: 600; color: {{ block.settings.location_badge_color | default: '#deb887' }}; text-transform: uppercase; letter-spacing: 1px;
    padding: 8px 16px; background: {{ block.settings.location_badge_bg | default: '#614524' | color_modify: 'alpha', 0.4 }};
    border: 1px solid {{ block.settings.location_badge_bg | default: '#614524' | color_modify: 'alpha', 0.6 }};
    border-radius: 20px; display: inline-block; width: fit-content;
    backdrop-filter: blur(10px);
  }

  .ai-clients-carousel__product-name-{{ ai_gen_id }} {
    font-size: 28px; font-weight: 700; color: {{ block.settings.card_text_color | default: '#ffffff' }};
    margin: 0; letter-spacing: -0.02em; line-height: 1.1;
  }

  .ai-clients-carousel__door-type-{{ ai_gen_id }} {
    font-size: 13px; font-weight: 500; color: {{ block.settings.card_text_color | default: '#ffffff' }};
    padding: 8px 16px; background: {{ block.settings.door_type_badge_bg | default: '#ffffff' | color_modify: 'alpha', 0.1 }};
    border: 1px solid {{ block.settings.door_type_badge_bg | default: '#ffffff' | color_modify: 'alpha', 0.2 }};
    border-radius: 20px; backdrop-filter: blur(10px);
    display: inline-block; width: fit-content; transition: transform .3s, background .3s, border-color .3s;
  }

  .ai-clients-carousel__card-{{ ai_gen_id }}:hover .ai-clients-carousel__door-type-{{ ai_gen_id }} {
    background: {{ block.settings.door_type_badge_bg | default: '#ffffff' | color_modify: 'alpha', 0.15 }}; border-color: {{ block.settings.door_type_badge_bg | default: '#ffffff' | color_modify: 'alpha', 0.25 }}; transform: translateY(-2px);
  }

  /* TESTIMONIAL OVERLAY */
  .ai-clients-carousel__testimonial-overlay-{{ ai_gen_id }} {
    position: absolute; inset: 0;
    background: linear-gradient(180deg, {{ block.settings.testimonial_overlay_color | default: '#000000' | color_modify: 'alpha', 0.85 }} 0%, {{ block.settings.testimonial_overlay_color | default: '#000000' | color_modify: 'alpha', 0.95 }} 100%);
    background: linear-gradient(180deg, color-mix(in srgb, var(--testimonial-overlay-bg, {{ block.settings.testimonial_overlay_color | default: '#000000' }}) 85%, transparent) 0%, color-mix(in srgb, var(--testimonial-overlay-bg, {{ block.settings.testimonial_overlay_color | default: '#000000' }}) 95%, transparent) 100%);
    padding: 40px 28px 28px 28px;
    opacity: 0; transform: translateY(20px);
    transition: opacity .4s cubic-bezier(0.25,0.46,0.45,0.94), transform .4s cubic-bezier(0.25,0.46,0.45,0.94);
    backdrop-filter: blur(20px);
    display: flex; flex-direction: column; align-items: center; justify-content: center;
    z-index: 3;
  }

  .ai-clients-carousel__card-{{ ai_gen_id }}:hover .ai-clients-carousel__client-info-{{ ai_gen_id }} { opacity: 0; transform: translateY(10px); }
  .ai-clients-carousel__card-{{ ai_gen_id }}:hover .ai-clients-carousel__testimonial-overlay-{{ ai_gen_id }} { opacity: 1; transform: translateY(0); }

  .ai-clients-carousel__testimonial-quote-{{ ai_gen_id }} {
    font-size: 18px; font-style: italic; color: {{ block.settings.card_text_color | default: '#ffffff' }};
    margin: 0 0 24px 0; line-height: 1.4; text-align: center; letter-spacing: -0.01em;
    position: relative; padding: 0 20px; flex-grow: 1;
    display: flex; align-items: center;
  }

  .ai-clients-carousel__testimonial-quote-{{ ai_gen_id }}::before {
    content: '"'; font-size: 48px; color: {{ block.settings.card_text_color | default: '#ffffff' | color_modify: 'alpha', 0.3 }};
    position: absolute; top: -16px; left: -8px; font-family: Georgia, serif;
  }
  .ai-clients-carousel__testimonial-quote-{{ ai_gen_id }}::after {
    content: '"'; font-size: 48px; color: {{ block.settings.card_text_color | default: '#ffffff' | color_modify: 'alpha', 0.3 }};
    position: absolute; bottom: -32px; right: -8px; font-family: Georgia, serif;
  }

  /* GLASSY BUTTON — now fully customizable */
  .ai-clients-carousel__testimonial-button-{{ ai_gen_id }} {
    display: inline-flex; align-items: center; justify-content: center;
    padding: 14px 28px;
    background: {{ block.settings.testimonial_button_bg | default: '#ffffff' | color_modify: 'alpha', 0.18 }};
    color: {{ block.settings.button_text_color | default: '#000000' }};
    border: 1px solid {{ block.settings.testimonial_button_bg | default: '#ffffff' | color_modify: 'alpha', 0.28 }};
    border-radius: 12px; font-size: 15px; font-weight: 600; text-decoration: none;
    transition: transform .3s, box-shadow .3s, background .2s, border-color .2s;
    text-align: center; letter-spacing: -0.01em;
    backdrop-filter: blur(12px); -webkit-backdrop-filter: blur(12px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.25), inset 0 1px 0 {{ block.settings.testimonial_button_bg | default: '#ffffff' | color_modify: 'alpha', 0.25 }};
  }
  .ai-clients-carousel__testimonial-button-{{ ai_gen_id }}:hover {
    background: {{ block.settings.testimonial_button_bg | default: '#ffffff' | color_modify: 'alpha', 0.26 }};
    border-color: {{ block.settings.testimonial_button_bg | default: '#ffffff' | color_modify: 'alpha', 0.38 }};
    transform: translateY(-2px);
    box-shadow: 0 12px 28px rgba(0,0,0,0.35), inset 0 1px 0 {{ block.settings.testimonial_button_bg | default: '#ffffff' | color_modify: 'alpha', 0.35 }};
  }
  .ai-clients-carousel__testimonial-button-{{ ai_gen_id }}:active {
    transform: translateY(0);
    background: {{ block.settings.testimonial_button_bg | default: '#ffffff' | color_modify: 'alpha', 0.22 }};
  }

  /* NAVIGATION ARROWS */
  .ai-clients-carousel__navigation-{{ ai_gen_id }} {
    position: absolute; top: 50%; transform: translateY(-50%);
    width: 56px; height: 56px;
    background: {{ block.settings.heading_color | default: '#ffffff' | color_modify: 'alpha', 0.9 }};
    border: 2px solid {{ block.settings.heading_color | default: '#ffffff' | color_modify: 'alpha', 0.2 }};
    border-radius: 50%;
    color: {{ block.settings.background_color | default: '#000000' }};
    cursor: pointer;
    transition: transform .3s cubic-bezier(0.25,0.46,0.45,0.94), background .2s, border-color .2s, box-shadow .2s;
    display: flex; align-items: center; justify-content: center;
    z-index: 200;
    backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px);
    box-shadow: 0 4px 20px {{ block.settings.background_color | default: '#000000' | color_modify: 'alpha', 0.3 }};
  }
  .ai-clients-carousel__navigation-{{ ai_gen_id }}:hover {
    background: {{ block.settings.heading_color | default: '#ffffff' }};
    border-color: {{ block.settings.heading_color | default: '#ffffff' }};
    transform: translateY(-50%) scale(1.1);
    box-shadow: 0 8px 30px {{ block.settings.background_color | default: '#000000' | color_modify: 'alpha', 0.4 }};
  }
  .ai-clients-carousel__navigation-{{ ai_gen_id }}:active { transform: translateY(-50%) scale(0.95); }
  .ai-clients-carousel__navigation-{{ ai_gen_id }}:disabled { opacity: .4; cursor: not-allowed; transform: translateY(-50%) scale(0.9); }
  .ai-clients-carousel__navigation-{{ ai_gen_id }}:disabled:hover { transform: translateY(-50%) scale(0.9); }
  .ai-clients-carousel__navigation--prev-{{ ai_gen_id }} { left: 20px; }
  .ai-clients-carousel__navigation--next-{{ ai_gen_id }} { right: 20px; }
  .ai-clients-carousel__navigation-{{ ai_gen_id }} svg { width: 22px; height: 22px; stroke-width: 2.5; }

  .ai-clients-carousel__pagination-{{ ai_gen_id }} {
    display: flex; justify-content: center; gap: 8px; margin-top: 40px;
  }

  .ai-clients-carousel__dot-{{ ai_gen_id }} {
    width: 12px; height: 12px; border-radius: 50%;
    background-color: {{ block.settings.heading_color | default: '#ffffff' | color_modify: 'alpha', 0.25 }};
    border: none; cursor: pointer;
    transition: transform .3s cubic-bezier(0.25,0.46,0.45,0.94), background-color .2s;
    padding: 0; outline: none;
  }
  .ai-clients-carousel__dot-{{ ai_gen_id }}.active { background-color: {{ block.settings.heading_color | default: '#ffffff' }}; transform: scale(1.0); box-shadow: none; }
  .ai-clients-carousel__dot-{{ ai_gen_id }}:hover { background-color: {{ block.settings.heading_color | default: '#ffffff' | color_modify: 'alpha', 0.6 }}; transform: scale(1.0); }

  .ai-clients-carousel__empty-state-{{ ai_gen_id }} {
    text-align: center; padding: 80px 20px;
    color: {{ block.settings.card_text_color | default: '#ffffff' | color_modify: 'alpha', 0.6 }};
  }
  .ai-clients-carousel__empty-title-{{ ai_gen_id }} { font-size: 20px; font-weight: 600; margin: 0 0 12px; }
  .ai-clients-carousel__empty-text-{{ ai_gen_id }} { font-size: 15px; opacity: 0.8; }

  /* Mobile Optimizations */
  @media screen and (max-width: 1200px) {
    .ai-clients-carousel__container-{{ ai_gen_id }} { padding: 0 16px; }
    .ai-clients-carousel__track-container-{{ ai_gen_id }} { margin: 0 60px; }
    .ai-clients-carousel__track-{{ ai_gen_id }} { padding: 0 15px; }
    .ai-clients-carousel__navigation--prev-{{ ai_gen_id }} { left: 8px; }
    .ai-clients-carousel__navigation--next-{{ ai_gen_id }} { right: 8px; }
  }

  @media screen and (max-width: 768px) {
    .ai-clients-carousel-{{ ai_gen_id }} {
      padding-top: calc(var(--pt) * 0.6);
      padding-bottom: calc(var(--pb) * 0.6);
    }

    .ai-clients-carousel__container-{{ ai_gen_id }} { padding: 0 12px; }
    .ai-clients-carousel__heading-{{ ai_gen_id }} { margin-bottom: {{ block.settings.heading_spacing | default: 80 | times: 0.67 | round }}px; }
    .ai-clients-carousel__wrapper-{{ ai_gen_id }} { padding: 16px 0 32px 0; }

    .ai-clients-carousel__track-container-{{ ai_gen_id }} {
      margin: 0;
      overflow-x: auto; overflow-y: hidden;
      scroll-snap-type: x mandatory;
      scrollbar-width: none; -ms-overflow-style: none; border-radius: 16px;
    }
    .ai-clients-carousel__track-container-{{ ai_gen_id }}::-webkit-scrollbar { display: none; }

    .ai-clients-carousel__track-{{ ai_gen_id }} { gap: 16px; padding: 0 12px; }
    .ai-clients-carousel__card-{{ ai_gen_id }} { scroll-snap-align: center; width: 300px; min-width: 300px; height: 440px; }
    .ai-clients-carousel__card-media-{{ ai_gen_id }} { height: 240px; padding: 20px; }

    .ai-clients-carousel__client-info-{{ ai_gen_id }} { padding: 28px 24px 24px 24px; min-height: 120px; }
    .ai-clients-carousel__product-name-{{ ai_gen_id }} { font-size: 22px; }
    .ai-clients-carousel__location-{{ ai_gen_id }} { font-size: 10px; padding: 6px 12px; }
    .ai-clients-carousel__door-type-{{ ai_gen_id }} { font-size: 12px; padding: 6px 14px; }

    .ai-clients-carousel__testimonial-overlay-{{ ai_gen_id }} { padding: 32px 24px 70px 24px; }
    .ai-clients-carousel__testimonial-button-{{ ai_gen_id }} { padding: 16px 20px; font-size: 14px; }

    .ai-clients-carousel__navigation-{{ ai_gen_id }} { display: none; }
    .ai-clients-carousel__pagination-{{ ai_gen_id }} { gap: 6px; margin-top: 32px; }
    .ai-clients-carousel__dot-{{ ai_gen_id }} { width: 10px; height: 10px; }
  }

  @media screen and (max-width: 480px) {
    .ai-clients-carousel__card-{{ ai_gen_id }} { width: 280px; min-width: 280px; height: 420px; }
    .ai-clients-carousel__card-media-{{ ai_gen_id }} { height: 220px; padding: 16px; }
    .ai-clients-carousel__client-info-{{ ai_gen_id }} { padding: 24px 20px 20px 20px; min-height: 110px; }
    .ai-clients-carousel__product-name-{{ ai_gen_id }} { font-size: 20px; }
    .ai-clients-carousel__location-{{ ai_gen_id }} { font-size: 9px; padding: 5px 10px; }
    .ai-clients-carousel__door-type-{{ ai_gen_id }} { font-size: 11px; padding: 5px 12px; }
    .ai-clients-carousel__testimonial-overlay-{{ ai_gen_id }} { padding: 28px 20px 65px 20px; }
    .ai-clients-carousel__testimonial-button-{{ ai_gen_id }} { padding: 14px 18px; font-size: 13px; }
  }

  @media (prefers-reduced-motion: reduce) {
    .ai-clients-carousel__card-{{ ai_gen_id }},
    .ai-clients-carousel__card-media-{{ ai_gen_id }} img,
    .ai-clients-carousel__card-media-{{ ai_gen_id }} video,
    .ai-clients-carousel__card-placeholder-{{ ai_gen_id }},
    .ai-clients-carousel__testimonial-button-{{ ai_gen_id }},
    .ai-clients-carousel__navigation-{{ ai_gen_id }},
    .ai-clients-carousel__track-{{ ai_gen_id }},
    .ai-clients-carousel__dot-{{ ai_gen_id }},
    .ai-clients-carousel__testimonial-overlay-{{ ai_gen_id }} { transition: none; }

    .ai-clients-carousel__card-{{ ai_gen_id }}:hover,
    .ai-clients-carousel__card-{{ ai_gen_id }}:hover .ai-clients-carousel__card-media-{{ ai_gen_id }} img,
    .ai-clients-carousel__card-{{ ai_gen_id }}:hover .ai-clients-carousel__card-media-{{ ai_gen_id }} video,
    .ai-clients-carousel__card-{{ ai_gen_id }}:hover .ai-clients-carousel__card-placeholder-{{ ai_gen_id }},
    .ai-clients-carousel__card-{{ ai_gen_id }}:hover .ai-clients-carousel__testimonial-button-{{ ai_gen_id }} { transform: none; }
  }
{% endstyle %}


<clients-carousel-{{ ai_gen_id }}
  class="ai-clients-carousel-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
  data-cards-per-view="{{ block.settings.cards_per_view_desktop | default: 3 }}"
  data-auto-play="{{ block.settings.enable_autoplay }}"
  data-auto-play-speed="{{ block.settings.autoplay_speed | default: 5000 }}"
  /* NEW: pass all colors and padding to CSS via vars so editor controls work predictably */
  style="--pt: {{ block.settings.section_padding_top | default: 100 }}px; --pb: {{ block.settings.section_padding | default: 80 }}px; --testimonial-overlay-bg: {{ block.settings.testimonial_overlay_color | default: '#000000' }}; --testimonial-btn-bg: {{ block.settings.testimonial_button_bg | default: '#ffffff' }}; --location-badge-color: {{ block.settings.location_badge_color | default: '#deb887' }}; --location-badge-bg: {{ block.settings.location_badge_bg | default: '#614524' }}; --door-type-badge-bg: {{ block.settings.door_type_badge_bg | default: '#ffffff' }}; --client-info-bg: {{ block.settings.client_info_overlay_bg | default: '#000000' }};"
>
  <div class="ai-clients-carousel__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
