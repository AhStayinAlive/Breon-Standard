{% comment %}
  PRODUCT CAROUSEL - CONSISTENT WITH BROEN DESIGN:
  - Product metafield integration
  - Consistent styling with main carousel
  - Enhanced product-specific features
  - Optimized card layout for products
{% endcomment %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-carousel-{{ ai_gen_id }} {
    background: {{ block.settings.background_color | default: '#000000' }};
    background: linear-gradient(180deg, {{ block.settings.background_color | default: '#000000' }} 0%, {{ block.settings.background_color | default: '#000000' | color_darken: 5 }} 100%);
    padding-top: {{ block.settings.section_padding_top | default: 80 }}px;
    padding-bottom: {{ block.settings.section_padding | default: 60 }}px;
    overflow: hidden;
    width: 100%;
    position: relative;
  }

  .ai-product-carousel-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      {{ block.settings.background_color | default: '#000000' | color_modify: 'alpha', 0.95 }} 0%,
      {{ block.settings.background_color | default: '#000000' | color_darken: 8 | color_modify: 'alpha', 0.98 }} 50%,
      {{ block.settings.background_color | default: '#000000' | color_darken: 3 | color_modify: 'alpha', 0.95 }} 100%
    );
    z-index: 1;
  }

  .ai-product-carousel__container-{{ ai_gen_id }} {
    max-width: {{ settings.page_width | default: 1400 }}px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 2;
  }

  .ai-product-carousel__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color | default: '#ffffff' }};
    font-size: clamp({{ block.settings.heading_size | default: 32 | minus: 8 }}px, 5vw, {{ block.settings.heading_size | default: 32 }}px);
    font-weight: 700;
    text-align: center;
    margin: 0 0 {{ block.settings.heading_spacing | default: 48 }}px;
    letter-spacing: -0.02em;
    line-height: 1.1;
    position: relative;
    font-family: Arial, sans-serif;
  }

  .ai-product-carousel__heading-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    bottom: -20px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 2px;
    background: linear-gradient(90deg, transparent, {{ block.settings.heading_color | default: '#ffffff' | color_modify: 'alpha', 0.8 }}, transparent);
  }

  .ai-product-carousel__wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: visible;
    margin: 0;
    padding: 20px 0 40px 0;
  }

  .ai-product-carousel__track-container-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    margin: 0 120px;
    border-radius: 20px;
  }

  .ai-product-carousel__track-{{ ai_gen_id }} {
    display: flex;
    gap: 24px;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    will-change: transform;
    padding: 0 40px;
  }

  .ai-product-carousel__card-{{ ai_gen_id }} {
    flex: 0 0 auto;
    width: 320px;
    height: 580px;
    background: #3d3d3d;
    border: 1px solid {{ block.settings.card_background | default: '#3d3d3d' | color_lighten: 20 | color_modify: 'alpha', 0.1 }};
    border-radius: {{ block.settings.card_border_radius | default: 16 }}px;
    box-shadow: 0 8px 32px {{ block.settings.card_background | default: '#000000' | color_modify: 'alpha', 0.4 }};
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    cursor: pointer;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    will-change: transform;
    position: relative;
  }

  .ai-product-carousel__card-{{ ai_gen_id }}:hover {
    transform: translateY(-8px) scale(1.02);
    border-color: {{ block.settings.card_background | default: '#3d3d3d' | color_lighten: 40 | color_modify: 'alpha', 0.3 }};
    box-shadow: 0 20px 60px {{ block.settings.card_background | default: '#000000' | color_modify: 'alpha', 0.6 }};
    background: #484848;
  }

  .ai-product-carousel__card-media-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 340px;
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px;
  }

  .ai-product-carousel__card-media-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    filter: none;
  }

  .ai-product-carousel__card-{{ ai_gen_id }}:hover .ai-product-carousel__card-media-{{ ai_gen_id }} img {
    transform: scale(1.02);
  }

  .ai-product-carousel__card-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    font-weight: 500;
    color: {{ block.settings.card_text_color | default: '#ffffff' | color_modify: 'alpha', 0.6 }};
    text-align: center;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .ai-product-carousel__card-overlay-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.7) 30%, rgba(0, 0, 0, 0.95) 100%);
    padding: 30px 24px 24px;
    color: #ffffff;
    backdrop-filter: blur(15px);
    z-index: 3;
  }

  .ai-product-carousel__product-name-{{ ai_gen_id }} {
    color: {{ block.settings.card_text_color | default: '#ffffff' }};
    font-size: 20px;
    font-weight: 700;
    margin: 0 0 8px;
    line-height: 1.3;
    letter-spacing: -0.01em;
    font-family: Arial, sans-serif;
  }

  .ai-product-carousel__door-classification-{{ ai_gen_id }} {
    display: inline-block;
    background: rgba(255, 255, 255, 0.1);
    color: #ffffff;
    padding: 6px 14px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 500;
    font-family: Arial, sans-serif;
    border: 1px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    margin-bottom: 16px;
  }

  .ai-product-carousel__price-{{ ai_gen_id }} {
    color: {{ block.settings.card_text_color | default: '#ffffff' }};
    font-size: 24px;
    font-weight: 700;
    margin: 0 0 20px;
    letter-spacing: -0.02em;
    font-family: Arial, sans-serif;
  }

  .ai-product-carousel__button-group-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-top: auto;
  }

  .ai-product-carousel__atc-btn-{{ ai_gen_id }} {
    width: 100%;
    background: rgba(0, 0, 0, 0.8);
    color: #ffffff;
    border: 1px solid rgba(255, 255, 255, 0.3);
    padding: 14px 20px;
    border-radius: 8px;
    font-family: Arial, sans-serif;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-align: center;
    backdrop-filter: blur(10px);
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-carousel__atc-btn-{{ ai_gen_id }}:hover {
    background: rgba(255, 255, 255, 0.95);
    color: #000000;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
  }

  .ai-product-carousel__buy-now-btn-{{ ai_gen_id }} {
    width: 100%;
    background: {{ block.settings.primary_button_color | default: '#007aff' }};
    color: {{ block.settings.primary_button_text_color | default: '#ffffff' }};
    border: none;
    padding: 14px 20px;
    border-radius: 8px;
    font-family: Arial, sans-serif;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-align: center;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-carousel__buy-now-btn-{{ ai_gen_id }}:hover {
    background: {{ block.settings.primary_button_hover_color | default: '#0056b3' }};
    transform: translateY(-2px);
    box-shadow: 0 8px 20px {{ block.settings.primary_button_color | default: '#007aff' | color_modify: 'alpha', 0.4 }};
  }

  .ai-product-carousel__see-all-link-{{ ai_gen_id }} {
    display: block;
    color: rgba(255, 255, 255, 0.7);
    font-family: Arial, sans-serif;
    font-size: 11px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.8px;
    text-decoration: none;
    text-align: center;
    transition: all 0.3s ease;
    padding: 8px;
    margin-top: 8px;
  }

  .ai-product-carousel__see-all-link-{{ ai_gen_id }}:hover {
    color: #ffffff;
    transform: translateY(-1px);
  }

  /* NAVIGATION ARROWS - Consistent with first carousel */
  .ai-product-carousel__navigation-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 56px;
    height: 56px;
    background: {{ block.settings.heading_color | default: '#ffffff' | color_modify: 'alpha', 0.9 }};
    border: 2px solid {{ block.settings.heading_color | default: '#ffffff' | color_modify: 'alpha', 0.2 }};
    border-radius: 50%;
    color: {{ block.settings.background_color | default: '#000000' }};
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 200;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    box-shadow: 0 4px 20px {{ block.settings.background_color | default: '#000000' | color_modify: 'alpha', 0.3 }};
  }

  .ai-product-carousel__navigation-{{ ai_gen_id }}:hover {
    background: {{ block.settings.heading_color | default: '#ffffff' }};
    border-color: {{ block.settings.heading_color | default: '#ffffff' }};
    transform: translateY(-50%) scale(1.1);
    box-shadow: 0 8px 30px {{ block.settings.background_color | default: '#000000' | color_modify: 'alpha', 0.4 }};
  }

  .ai-product-carousel__navigation-{{ ai_gen_id }}:disabled {
    opacity: 0.4;
    cursor: not-allowed;
    transform: translateY(-50%) scale(0.9);
  }

  .ai-product-carousel__navigation--prev-{{ ai_gen_id }} {
    left: 20px;
  }

  .ai-product-carousel__navigation--next-{{ ai_gen_id }} {
    right: 20px;
  }

  .ai-product-carousel__navigation-{{ ai_gen_id }} svg {
    width: 22px;
    height: 22px;
    stroke-width: 2.5;
  }

  .ai-product-carousel__pagination-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 40px;
  }

  .ai-product-carousel__dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: {{ block.settings.heading_color | default: '#ffffff' | color_modify: 'alpha', 0.25 }};
    border: none;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    padding: 0;
    outline: none;
  }

  .ai-product-carousel__dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.heading_color | default: '#ffffff' }};
    transform: scale(1.0);
  }

  /* Mobile Optimizations */
  @media screen and (max-width: 1200px) {
    .ai-product-carousel__container-{{ ai_gen_id }} {
      padding: 0 16px;
    }
    
    .ai-product-carousel__track-container-{{ ai_gen_id }} {
      margin: 0 90px;
    }
    
    .ai-product-carousel__track-{{ ai_gen_id }} {
      padding: 0 30px;
    }
  }

  @media screen and (max-width: 768px) {
    .ai-product-carousel-{{ ai_gen_id }} {
      padding-top: {{ block.settings.section_padding_top | default: 80 | times: 0.6 | round }}px;
      padding-bottom: {{ block.settings.section_padding | default: 60 | times: 0.6 | round }}px;
    }

    .ai-product-carousel__track-container-{{ ai_gen_id }} {
      margin: 0;
      overflow-x: auto;
      overflow-y: hidden;
      scroll-snap-type: x mandatory;
      scrollbar-width: none;
      -ms-overflow-style: none;
      border-radius: 16px;
    }

    .ai-product-carousel__track-container-{{ ai_gen_id }}::-webkit-scrollbar {
      display: none;
    }

    .ai-product-carousel__track-{{ ai_gen_id }} {
      gap: 16px;
      padding: 0 12px;
    }

    .ai-product-carousel__card-{{ ai_gen_id }} {
      scroll-snap-align: center;
      width: 280px;
      height: 520px;
    }

    .ai-product-carousel__card-media-{{ ai_gen_id }} {
      height: 280px;
      padding: 30px;
    }

    .ai-product-carousel__navigation-{{ ai_gen_id }} {
      display: none;
    }
  }

  /* Performance optimizations */
  @media (prefers-reduced-motion: reduce) {
    .ai-product-carousel__card-{{ ai_gen_id }},
    .ai-product-carousel__card-media-{{ ai_gen_id }} img,
    .ai-product-carousel__navigation-{{ ai_gen_id }},
    .ai-product-carousel__track-{{ ai_gen_id }},
    .ai-product-carousel__dot-{{ ai_gen_id }} {
      transition: none;
    }
    
    .ai-product-carousel__card-{{ ai_gen_id }}:hover,
    .ai-product-carousel__card-{{ ai_gen_id }}:hover .ai-product-carousel__card-media-{{ ai_gen_id }} img {
      transform: none;
    }
  }
{% endstyle %}

<product-carousel-{{ ai_gen_id }}
  class="ai-product-carousel-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
  data-cards-per-view="{{ block.settings.cards_per_view_desktop | default: 3 }}"
  data-auto-play="{{ block.settings.enable_autoplay | default: true }}"
  data-auto-play-speed="{{ block.settings.autoplay_speed | default: 5000 }}"
>
  <div class="ai-product-carousel__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-product-carousel__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% assign collection_handle = block.settings.product_collection %}
    {% assign products_to_show = collections[collection_handle].products | limit: 8 %}

    {% if products_to_show.size > 0 %}
      <div class="ai-product-carousel__wrapper-{{ ai_gen_id }}">
        <div class="ai-product-carousel__track-container-{{ ai_gen_id }}">
          <div class="ai-product-carousel__track-{{ ai_gen_id }}" role="region" aria-label="Product carousel">
            {% for product in products_to_show %}
              <div class="ai-product-carousel__card-{{ ai_gen_id }}" data-product-id="{{ product.id }}">
                <div class="ai-product-carousel__card-media-{{ ai_gen_id }}">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 600 }}"
                      alt="{{ product.featured_image.alt | default: product.title | escape }}"
                      loading="lazy"
                      width="600"
                      height="400"
                    >
                  {% else %}
                    <div class="ai-product-carousel__card-placeholder-{{ ai_gen_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>

                <div class="ai-product-carousel__card-overlay-{{ ai_gen_id }}">
                  <h3 class="ai-product-carousel__product-name-{{ ai_gen_id }}">{{ product.title }}</h3>
                  
                  {% comment %} Door Classification from metafield {% endcomment %}
                  {% assign door_classification = product.metafields.custom.door_classification.value %}
                  {% if door_classification != blank %}
                    <span class="ai-product-carousel__door-classification-{{ ai_gen_id }}">{{ door_classification }}</span>
                  {% endif %}

                  <div class="ai-product-carousel__price-{{ ai_gen_id }}">
                    {% if product.compare_at_price > product.price %}
                      <span style="text-decoration: line-through; opacity: 0.7; font-size: 18px;">{{ product.compare_at_price | money }}</span>
                    {% endif %}
                    {{ product.price | money }}
                  </div>

                  <div class="ai-product-carousel__button-group-{{ ai_gen_id }}">
                    {% comment %} Add to Cart Button {% endcomment %}
                    <form action="/cart/add" method="post" enctype="multipart/form-data" class="product-form">
                      <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                      <button
                        type="submit"
                        name="add"
                        class="ai-product-carousel__atc-btn-{{ ai_gen_id }}"
                        {% unless product.available %}disabled{% endunless %}
                      >
                        {% if product.available %}
                          ATC
                        {% else %}
                          Sold Out
                        {% endif %}
                      </button>
                    </form>

                    {% comment %} Buy Now Button {% endcomment %}
                    <a
                      href="{{ product.url }}"
                      class="ai-product-carousel__buy-now-btn-{{ ai_gen_id }}"
                    >
                      BUY NOW
                    </a>

                    {% comment %} See All Products Link {% endcomment %}
                    <a
                      href="{{ collections[collection_handle].url | default: '/collections/all' }}"
                      class="ai-product-carousel__see-all-link-{{ ai_gen_id }}"
                    >
                      SEE ALL PRODUCTS
                    </a>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>

        <button
          class="ai-product-carousel__navigation-{{ ai_gen_id }} ai-product-carousel__navigation--prev-{{ ai_gen_id }}"
          aria-label="Previous slide"
          type="button"
        >
          <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M15 18L9 12L15 6"/>
          </svg>
        </button>

        <button
          class="ai-product-carousel__navigation-{{ ai_gen_id }} ai-product-carousel__navigation--next-{{ ai_gen_id }}"
          aria-label="Next slide"
          type="button"
        >
          <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 18L15 12L9 6"/>
          </svg>
        </button>

        <div class="ai-product-carousel__pagination-{{ ai_gen_id }}" role="tablist" aria-label="Carousel pagination"></div>
      </div>
    {% else %}
      <div style="text-align: center; padding: 80px 20px; color: {{ block.settings.card_text_color | default: '#ffffff' | color_modify: 'alpha', 0.6 }};">
        <h3 style="font-size: 20px; font-weight: 600; margin: 0 0 12px;">No products found</h3>
        <p style="font-size: 15px; opacity: 0.8;">Please select a collection in the theme editor</p>
      </div>
    {% endif %}
  </div>
</product-carousel-{{ ai_gen_id }}>

<script>
(function() {
  class ProductCarousel{{ ai_gen_id }} extends HTMLElement {
    constructor() {
      super();
      this.currentSlide = 0;
      this.isDesktop = window.innerWidth >= 768;
      this.cardsPerView = this.isDesktop ? parseInt(this.dataset.cardsPerView) || 3 : 1;
      this.isTransitioning = false;
      this.totalCards = 0;
      this.autoPlayEnabled = this.dataset.autoPlay === 'true';
      this.autoPlaySpeed = parseInt(this.dataset.autoPlaySpeed) || 5000;
      this.autoPlayInterval = null;
    }

    connectedCallback() {
      this.track = this.querySelector('.ai-product-carousel__track-{{ ai_gen_id }}');
      this.trackContainer = this.querySelector('.ai-product-carousel__track-container-{{ ai_gen_id }}');
      this.cards = this.querySelectorAll('.ai-product-carousel__card-{{ ai_gen_id }}');
      this.prevBtn = this.querySelector('.ai-product-carousel__navigation--prev-{{ ai_gen_id }}');
      this.nextBtn = this.querySelector('.ai-product-carousel__navigation--next-{{ ai_gen_id }}');
      this.pagination = this.querySelector('.ai-product-carousel__pagination-{{ ai_gen_id }}');

      this.totalCards = this.cards.length;

      if (this.totalCards === 0) return;

      this.setupPagination();
      this.setupEventListeners();
      this.setupTouchSupport();
      this.setupKeyboardNavigation();
      this.updateNavigation();
      this.setupAutoPlay();
      
      setTimeout(() => this.goToSlide(0), 100);
    }

    setupPagination() {
      const totalSlides = Math.max(1, Math.ceil((this.totalCards - this.cardsPerView + 1)));
      this.pagination.innerHTML = '';

      for (let i = 0; i < totalSlides; i++) {
        const dot = document.createElement('button');
        dot.className = `ai-product-carousel__dot-{{ ai_gen_id }}${i === 0 ? ' active' : ''}`;
        dot.setAttribute('aria-label', `Go to slide ${i + 1}`);
        dot.setAttribute('role', 'tab');
        dot.addEventListener('click', () => this.goToSlide(i));
        this.pagination.appendChild(dot);
      }
    }

    setupEventListeners() {
      this.prevBtn?.addEventListener('click', (e) => {
        e.preventDefault();
        this.prevSlide();
      });
      
      this.nextBtn?.addEventListener('click', (e) => {
        e.preventDefault();
        this.nextSlide();
      });

      // Handle add to cart forms
      this.querySelectorAll('.product-form').forEach(form => {
        form.addEventListener('submit', (e) => {
          e.stopPropagation();
          // Let the form submit naturally for proper Shopify cart integration
        });
      });

      // Handle buy now and see all links
      this.querySelectorAll('.ai-product-carousel__buy-now-btn-{{ ai_gen_id }}, .ai-product-carousel__see-all-link-{{ ai_gen_id }}').forEach(link => {
        link.addEventListener('click', (e) => {
          e.stopPropagation();
          // Let links work naturally
        });
      });

      let resizeTimeout;
      window.addEventListener('resize', () => {
        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(() => {
          const wasDesktop = this.isDesktop;
          this.isDesktop = window.innerWidth >= 768;
          const newCardsPerView = this.isDesktop ? parseInt(this.dataset.cardsPerView) || 3 : 1;

          if (wasDesktop !== this.isDesktop || newCardsPerView !== this.cardsPerView) {
            this.cardsPerView = newCardsPerView;
            this.currentSlide = 0;
            this.setupPagination();
            this.updateNavigation();
            this.goToSlide(0);
          }
        }, 250);
      });
    }

    setupTouchSupport() {
      let startX = 0;
      let currentX = 0;
      let isDragging = false;

      this.trackContainer.addEventListener('touchstart', (e) => {
        startX = e.touches[0].clientX;
        isDragging = true;
        this.pauseAutoPlay();
      }, { passive: true });

      this.trackContainer.addEventListener('touchmove', (e) => {
        if (!isDragging) return;
        currentX = e.touches[0].clientX;
      }, { passive: true });

      this.trackContainer.addEventListener('touchend', () => {
        if (!isDragging) return;
        isDragging = false;

        const diff = startX - currentX;
        const threshold = 50;

        if (Math.abs(diff) > threshold) {
          if (diff > 0) {
            this.nextSlide();
          } else {
            this.prevSlide();
          }
        }

        this.resumeAutoPlay();
      }, { passive: true });
    }

    setupKeyboardNavigation() {
      this.addEventListener('keydown', (e) => {
        if (e.key === 'ArrowLeft') {
          e.preventDefault();
          this.prevSlide();
        } else if (e.key === 'ArrowRight') {
          e.preventDefault();
          this.nextSlide();
        }
      });

      this.setAttribute('tabindex', '0');
    }

    setupAutoPlay() {
      if (!this.autoPlayEnabled) return;

      this.addEventListener('mouseenter', () => this.pauseAutoPlay());
      this.addEventListener('mouseleave', () => this.resumeAutoPlay());

      this.resumeAutoPlay();
    }

    pauseAutoPlay() {
      if (this.autoPlayInterval) {
        clearInterval(this.autoPlayInterval);
        this.autoPlayInterval = null;
      }
    }

    resumeAutoPlay() {
      if (!this.autoPlayEnabled) return;
      
      this.pauseAutoPlay();
      this.autoPlayInterval = setInterval(() => {
        this.nextSlide();
      }, this.autoPlaySpeed);
    }

    goToSlide(index) {
      if (this.isTransitioning || this.totalCards === 0) return;
      
      const maxSlide = Math.max(0, this.totalCards - this.cardsPerView);
      this.currentSlide = Math.max(0, Math.min(index, maxSlide));
      this.isTransitioning = true;

      if (this.isDesktop) {
        const cardWidth = this.cards[0].offsetWidth;
        const gap = 24;
        const offset = this.currentSlide * (cardWidth + gap);
        this.track.style.transform = `translateX(-${offset}px)`;
      } else {
        const cardWidth = this.cards[0].offsetWidth;
        const gap = 16;
        const offset = this.currentSlide * (cardWidth + gap);
        this.trackContainer.scrollTo({ left: offset, behavior: 'smooth' });
      }

      setTimeout(() => {
        this.isTransitioning = false;
      }, 600);

      this.updateNavigation();
    }

    prevSlide() {
      const newSlide = Math.max(0, this.currentSlide - 1);
      this.goToSlide(newSlide);
    }

    nextSlide() {
      const maxSlide = Math.max(0, this.totalCards - this.cardsPerView);
      const newSlide = Math.min(maxSlide, this.currentSlide + 1);
      this.goToSlide(newSlide);
    }

    updateNavigation() {
      const maxSlide = Math.max(0, this.totalCards - this.cardsPerView);

      if (this.prevBtn) {
        this.prevBtn.disabled = this.currentSlide <= 0;
      }

      if (this.nextBtn) {
        this.nextBtn.disabled = this.currentSlide >= maxSlide;
      }

      this.querySelectorAll('.ai-product-carousel__dot-{{ ai_gen_id }}').forEach((dot, index) => {
        dot.classList.toggle('active', index === this.currentSlide);
        dot.setAttribute('aria-selected', index === this.currentSlide);
      });
    }

    disconnectedCallback() {
      this.pauseAutoPlay();
    }
  }

  customElements.define('product-carousel-{{ ai_gen_id }}', ProductCarousel{{ ai_gen_id }});
})();
</script>

