  }

  .bottom-title {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Open Sans', 'Helvetica Neue', sans-serif;
    font-size: clamp(24px, 4vw, 32px);
    font-weight: 700;
    margin: 0 0 8px 0;
    color: #ffffff;
    text-shadow: 0 2px 12px rgba(0, 0, 0, 0.8);
    letter-spacing: 0.1em;
  }

  .bottom-subtitle {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Open Sans', 'Helvetica Neue', sans-serif;
    font-size: clamp(20px, 3vw, 26px);
    font-weight: 600;
    margin: 0;
    color: #ffffff;
    text-shadow: 0 2px 12px rgba(0, 0, 0, 0.8);
    letter-spacing: 0.05em;
  }

  /* Specialist Button */
  .hero-specialist-btn {
    position: fixed;
    bottom: 24px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 9999;
  }

  .specialist-btn {
    background: #000000;
    color: #ffffff;
    border: 2px solid #ffffff;
    border-radius: 50px;
    padding: 16px 32px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Open Sans', 'Helvetica Neue', sans-serif;
    font-size: 15px;
    font-weight: 600;
    cursor: pointer;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    align-items: center;
    gap: 10px;
    backdrop-filter: blur(10px);
    min-width: 220px;
    justify-content: center;
  }

  .specialist-btn:hover {
    background: #ffffff;
    color: #000000;
    transform: translateX(-50%) translateY(-4px);
    box-shadow: 0 16px 40px rgba(0, 0, 0, 0.5);
  }

  .btn-text {
    white-space: nowrap;
    font-weight: 600;
  }

  .btn-icon {
    transition: transform 0.3s ease;
    flex-shrink: 0;
  }

  .specialist-btn:hover .btn-icon {
    transform: scale(1.1);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .hero-content {
      padding: 60px 20px 40px;
    }

    .hero-cta {
      flex-direction: column;
      align-items: center;
      gap: 16px;
    }

    .primary-btn {
      min-width: 280px;
      padding: 16px 32px;
      font-size: 15px;
    }

    .secondary-btn {
      min-width: 280px;
      padding: 12px 24px;
      font-size: 13px;
    }

    .hero-text {
      margin-bottom: 40px;
    }

    .secondary-actions {
      gap: 10px;
    }
  }

  @media (max-width: 480px) {
    .hero-content {
      padding: 50px 16px 30px;
    }

    .primary-btn {
      min-width: 100%;
      max-width: 320px;
    }

    .secondary-btn {
      min-width: 100%;
      max-width: 320px;
    }

    .specialist-btn {
      min-width: 200px;
      padding: 14px 28px;
      font-size: 14px;
    }

    .hero-bottom {
      margin-bottom: 70px;
    }
  }

  /* Landscape Mobile */
  @media (max-height: 600px) and (orientation: landscape) {
    .hero-content {
      padding: 40px 20px 20px;
    }

    .hero-text {
      margin-bottom: 32px;
    }

    .hero-cta {
      margin-bottom: 24px;
    }

    .hero-bottom {
      margin-bottom: 60px;
      padding: 15px;
    }
  }

  /* Touch Improvements */
  @media (hover: none) and (pointer: coarse) {
    .primary-btn,
    .secondary-btn {
      min-height: 48px;
    }

    .specialist-btn {
      min-height: 48px;
      padding: 16px 32px;
    }
  }

  /* Accessibility */
  .primary-btn:focus,
  .secondary-btn:focus,
  .specialist-btn:focus {
    outline: 3px solid rgba(0, 0, 0, 0.8);
    outline-offset: 2px;
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .primary-btn,
    .secondary-btn,
    .specialist-btn {
      transition: none;
    }

    .primary-btn:hover,
    .secondary-btn:hover,
    .specialist-btn:hover {
      transform: none;
    }
  }

  /* High contrast mode */
  @media (prefers-contrast: high) {
    .video-overlay {
      background: rgba(0, 0, 0, 0.8);
    }

    .secondary-btn {
      border-width: 3px;
    }
  }
</style>

<script>
// Mobile-optimized JavaScript
document.addEventListener('DOMContentLoaded', function() {
  
  // Button functions with mobile considerations
  window.scrollToProducts = function() {
    const nextSection = document.querySelector('.hero-section').nextElementSibling;
    if (nextSection) {
      nextSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
    } else {
      window.scrollBy({ top: window.innerHeight, behavior: 'smooth' });
    }
  };

  window.openDoorCheck = function() {
    // Mobile-friendly contact options
    const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
    
    if (isMobile && '{{ settings.viber_number }}') {
      window.open('viber://chat?number={{ settings.viber_number }}', '_blank');
    } else if (typeof openSpecialistModal === 'function') {
      openSpecialistModal('door-check');
    } else {
      alert('Door Check: We will help you identify your door type.');
    }
  };

  window.openLockChooser = function() {
    if (typeof openSpecialistModal === 'function') {
      openSpecialistModal('lock-chooser');
    } else {
      alert('Smart Lock Chooser: Let us guide you to the perfect lock.');
    }
  };

  window.openContactModal = function() {
    if (typeof openSpecialistModal === 'function') {
      openSpecialistModal('general');
    } else {
      window.location.href = '{{ routes.pages_url }}/contact';
    }
  };

  window.openSpecialistModal = function(type) {
    // Check if specialist modal function exists
    if (typeof showSpecialistModal === 'function') {
      showSpecialistModal(type);
    } else {
      // Fallback to contact page or direct contact
      const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
      
      if (isMobile && '{{ settings.viber_number }}') {
        window.open('viber://chat?number={{ settings.viber_number }}', '_blank');
      } else if (isMobile && '{{ settings.whatsapp_number }}') {
        window.open('https://wa.me/{{ settings.whatsapp_number }}', '_blank');
      } else {
        window.location.href = '{{ routes.pages_url }}/contact';
      }
    }
  };

  // Video optimization for mobile
  const video = document.querySelector('.hero-video');
  if (video) {
    // Mobile video handling
    const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
    
    if (isMobile) {
      // More conservative video settings for mobile
      video.preload = 'none';
      
      // Play video on user interaction for mobile
      const playVideo = () => {
        video.play().catch(e => console.log('Mobile video autoplay failed:', e));
        document.removeEventListener('touchstart', playVideo);
      };
      
      document.addEventListener('touchstart', playVideo, { once: true });
    } else {
      // Desktop video handling
      video.play().catch(e => console.log('Video autoplay failed:', e));
    }

    // Intersection observer for performance
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          video.play().catch(e => console.log('Video play failed:', e));
        } else {
          video.pause();
        }
      });
    }, { threshold: 0.25 });

    observer.observe(video);

    // Pause video when page is hidden (battery optimization)
    document.addEventListener('visibilitychange', function() {
      if (document.hidden) {
        video.pause();
      } else if (video.getBoundingClientRect().top < window.innerHeight) {
        video.play().catch(e => console.log('Video resume failed:', e));
      }
    });
  }

  // Touch feedback for buttons
  document.querySelectorAll('.primary-btn, .secondary-btn, .specialist-btn').forEach(button => {
    button.addEventListener('touchstart', function() {
      this.style.transform = 'scale(0.98)';
    });
    
    button.addEventListener('touchend', function() {
      setTimeout(() => {
        this.style.transform = '';
      }, 100);
    });
  });

  // Prevent double-tap zoom on buttons
  let lastTouchEnd = 0;
  document.querySelectorAll('.primary-btn, .secondary-btn, .specialist-btn').forEach(button => {
    button.addEventListener('touchend', function(event) {
      const now = (new Date()).getTime();
      if (now - lastTouchEnd <= 300) {
        event.preventDefault();
      }
      lastTouchEnd = now;
    }, false);
  });

  // Adjust specialist button position on keyboard open (mobile)
  if ('visualViewport' in window) {
    const specialistBtn = document.querySelector('.hero-specialist-btn');
    
    window.visualViewport.addEventListener('resize', () => {
      const viewportHeight = window.visualViewport.height;
      const windowHeight = window.innerHeight;
      
      if (viewportHeight < windowHeight * 0.75) {
        // Keyboard is likely open
        specialistBtn.style.bottom = '10px';
        specialistBtn.style.transform = 'translateX(-50%) scale(0.9)';
      } else {
        // Keyboard is closed
        specialistBtn.style.bottom = '24px';
        specialistBtn.style.transform = 'translateX(-50%)';
      }
    });
  }

  // Analytics tracking
  document.querySelectorAll('.primary-btn, .secondary-btn, .specialist-btn').forEach(button => {
    button.addEventListener('click', function() {
      const action = this.textContent.trim();
      
      if (typeof gtag === 'function') {
        gtag('event', 'click', {
          event_category: 'hero_premium',
          event_label: action,
          value: 1
        });
      }
    });
  });
});
</script>