        <button class="primary-btn" onclick="openLockChooser()">
          Help Me Choose a Smart Lock
        </button>
      </div>

      <!-- Secondary Actions -->
      <div class="secondary-actions">
        <button class="secondary-btn" onclick="openDoorCheck()">
          Help Me Check My Door
        </button>
        <a href="{{ routes.pages_url }}/catalog" class="secondary-btn">
          Download Catalog (PDF)
        </a>
        <button class="secondary-btn" onclick="openContactModal()">
          Contact Us Directly
        </button>
      </div>
    </div>
  </div>

  <!-- Bottom Section -->
  <div class="hero-bottom">
    <div class="hero-bottom-content">
      <h3 class="bottom-title">SECURED WITH</h3>
      <h4 class="bottom-subtitle">ON LOCK</h4>
    </div>
  </div>

  <!-- Sticky Specialist Button -->
  <div class="hero-specialist-btn">
    <button type="button" class="specialist-btn" onclick="openSpecialistModal()">
      <span class="btn-text">Talk to a Specialist</span>
      <svg class="btn-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
