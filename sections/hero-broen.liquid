<!-- Premium Hero Section - Allbirds Style Layout -->
<section class="hero-section">
  <!-- Video Background -->
  <div class="video-background">
    <video autoplay muted loop playsinline class="hero-video">
      <source src="https://cdn.shopify.com/videos/c/o/v/6db4f0dbb9c840569be69f51de355151.mp4" type="video/mp4">
    </video>
    <div class="video-overlay"></div>
  </div>

  <!-- Hero Content -->
  <div class="hero-content">
    <div class="hero-container">
      <!-- Main Hero Text - Allbirds Style -->
      <div class="hero-text">
        <h1 class="hero-headline">Peak Security<br>Peak Style</h1>
        <p class="hero-subtitle">Stylish Smart Locks</p>
      </div>

      <!-- CTA Buttons - Allbirds Layout -->
      <div class="hero-cta">
        <button class="primary-btn" onclick="scrollToProducts()">
          Browse Products Myself
