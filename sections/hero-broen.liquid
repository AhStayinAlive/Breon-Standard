<script>
// Minimalist JavaScript - Apple Style Performance
document.addEventListener('DOMContentLoaded', function() {
  
  // Button Functions
  window.scrollToProducts = function() {
    window.location.href = '{{ routes.all_products_collection_url }}';
  };

  window.openDoorCheck = function() {
    const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
    
    if (isMobile && '{{ settings.viber_number }}') {
      window.open('viber://chat?number={{ settings.viber_number }}', '_blank');
    } else if (typeof openSpecialistModal === 'function') {
      openSpecialistModal('door-check');
    } else {
      alert('We\'ll help you identify your door type.');
    }
  };

  window.openLockChooser = function() {
    if (typeof openSpecialistModal === 'function') {
      openSpecialistModal('lock-chooser');
    } else {
      alert('Let us guide you to the perfect lock.');
    }
  };

  window.openContactModal = function() {
    if (typeof openSpecialistModal === 'function') {
      openSpecialistModal('general');
    } else {
      window.location.href = '{{ routes.pages_url }}/contact';
    }
  };

  window.openSpecialistModal = function(type) {
    if (typeof showSpecialistModal === 'function') {
      showSpecialistModal(type);
    } else {
      const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
      
      if (isMobile && '{{ settings.viber_number }}') {
        window.open('viber://chat?number={{ settings.viber_number }}', '_blank');
      } else if (isMobile && '{{ settings.whatsapp_number }}') {
        window.open('https://wa.me/{{ settings.whatsapp_number }}', '_blank');
      } else {
        window.location.href = '{{ routes.pages_url }}/contact';
      }
    }
  };

    // Enhanced video optimization for mobile and performance
    const video = document.querySelector('.hero-video');
    if (video) {
      const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
      const isLowPowerMode = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      
      if (isMobile || isLowPowerMode) {
        // More conservative video settings for mobile and accessibility
        video.preload = 'none';
        
        // Play video on user interaction for mobile
        const playVideo = () => {
          video.play().catch(e => console.log('Mobile video autoplay failed:', e));
          document.removeEventListener('touchstart', playVideo);
          document.removeEventListener('click', playVideo);
        };
        
        document.addEventListener('touchstart', playVideo, { once: true });
        document.addEventListener('click', playVideo, { once: true });
      } else {
        // Desktop video handling
        video.play().catch(e => console.log('Video autoplay failed:', e));
      }

      // Enhanced intersection observer for performance
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            if (!isLowPowerMode) {
              video.play().catch(e => console.log('Video play failed:', e));
            }
          } else {
            video.pause();
          }
        });
      }, { 
        threshold: 0.25,
        rootMargin: '50px'
      });

      observer.observe(video);

      // Enhanced page visibility handling for battery optimization
      document.addEventListener('visibilitychange', function() {
        if (document.hidden) {
          video.pause();
        } else if (video.getBoundingClientRect().top < window.innerHeight && !isLowPowerMode) {
          video.play().catch(e => console.log('Video resume failed:', e));
        }
      });
    }
  // Enhanced Touch Feedback
  const buttons = document.querySelectorAll('.btn-primary, .btn-primary-outline, .btn-secondary, .specialist-btn');
    let touchTimer;
    
    button.addEventListener('touchstart', function(e) {
      this.style.transform = 'scale(0.95)';
      
      if ('vibrate' in navigator) {
        navigator.vibrate(5);
      }
      
      touchTimer = setTimeout(() => {
        this.style.transform = '';
      }, 150);
    }, { passive: true });
    
    button.addEventListener('touchend', function() {
      clearTimeout(touchTimer);
      setTimeout(() => {
        this.style.transform = '';
      }, 100);
    }, { passive: true });

    // Analytics
    button.addEventListener('click', function() {
      const action = this.textContent.trim();
      
      if (typeof gtag === 'function') {
        gtag('event', 'click', {
          event_category: 'hero_minimalist',
          event_label: action,
          value: 1
        });
      }
    });
  });

  // Prevent Double-tap Zoom
  let lastTouchEnd = 0;
  buttons.forEach(button => {
    button.addEventListener('touchend', function(event) {
      const now = Date.now();
      if (now - lastTouchEnd <= 300) {
        event.preventDefault();
      }
      lastTouchEnd = now;
    }, { passive: false });
  });

  // Intersection Observer for Performance
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '50px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('in-view');
      }
    });
  }, observerOptions);

  // Observe hero elements
  const heroElements = document.querySelectorAll('.hero-text, .hero-actions, .hero-secondary, .hero-visual');
  heroElements.forEach(el => observer.observe(el));

  // Smooth Scroll Performance
  let ticking = false;
  const handleScroll = () => {
    if (!ticking && !window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
      requestAnimationFrame(() => {
        const scrolled = window.pageYOffset;
        const heroSection = document.querySelector('.hero-section');
        
        if (heroSection && scrolled > 50) {
          heroSection.style.transform = `translateY(${scrolled * 0.1}px)`;
        }
        
        ticking = false;
      });
      ticking = true;
    }
  };

  window.addEventListener('scroll', handleScroll, { passive: true });

  // Enhanced Keyboard Navigation
  buttons.forEach((button, index) => {
    button.addEventListener('keydown', function(e) {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        this.click();
      }
      
      if (e.key === 'ArrowRight' || e.key === 'ArrowDown') {
        e.preventDefault();
        const nextButton = buttons[index + 1] || buttons[0];
        nextButton.focus();
      }
      
      if (e.key === 'ArrowLeft' || e.key === 'ArrowUp') {
        e.preventDefault();
        const prevButton = buttons[index - 1] || buttons[buttons.length - 1];
        prevButton.focus();
      }
    });
  });

  // Performance Monitoring
  performance.mark('hero-init-complete');
  
  console.log('🍎 Minimalist Hero Section initialized - Apple style');
});

